@page "{id:guid}"
@using MyRoomService.Domain.Entities
@model MyRoomService.Pages.Units.DetailsModel
@{
    ViewData["Title"] = $"Unit {Model.Unit.UnitNumber} Details";
}

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-0">Unit @Model.Unit.UnitNumber</h2>
            <p class="text-muted">
                <i class="bi bi-building me-1"></i> @Model.Unit.Building?.Name
                <span class="mx-2">•</span>
                <span class="badge @(Model.Unit.Status == UnitStatus.Available ? "bg-success" : "bg-warning") rounded-pill">
                    @Model.Unit.Status.ToString()
                </span>
            </p>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Unit.Id" class="btn btn-outline-primary rounded-pill shadow-sm">
                <i class="bi bi-pencil me-1"></i> Edit Unit
            </a>
            <a asp-page="/Buildings/ManageBuilding" asp-route-id="@Model.Unit.BuildingId" asp-fragment="units" class="btn btn-light rounded-pill border shadow-sm">
                Back to Building
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-secondary mb-0"><i class="bi bi-info-circle me-2"></i>Unit Specifications</h5>
                </div>
                <div class="card-body p-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center">
                            <span class="text-muted">Floor Level</span>
                            <span class="fw-bold">@Model.Unit.FloorLevel</span>
                        </li>
                        <li class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center">
                            <span class="text-muted">Rental Mode</span>
                            <span class="fw-bold text-capitalize">@(Model.Unit.RentalMode.Replace("_", " ").ToLower())</span>
                        </li>
                        <li class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center">
                            <span class="text-muted">Max Occupancy</span>
                            <span class="fw-bold">@Model.Unit.MaxOccupancy Pax</span>
                        </li>
                        <li class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center border-bottom-0">
                            <span class="text-muted">Default Monthly Rate</span>
                            <span class="fw-bold text-success fs-5">₱@Model.Unit.DefaultRate.ToString("N2")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-secondary mb-0"><i class="bi bi-tags me-2"></i>Included Services & Amenities</h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.Unit.UnitServices != null && Model.Unit.UnitServices.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle border rounded-3 overflow-hidden">
                                <thead class="table-light">
                                    <tr>
                                        <th>Service Name</th>
                                        <th class="text-end">Monthly Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model.Unit.UnitServices)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@service.Name</td>
                                            <td class="text-end text-primary fw-bold">₱@service.MonthlyPrice.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td class="text-end fw-bold text-muted">Total Additional Services:</td>
                                        <td class="text-end fw-bold text-dark fs-6">
                                            ₱@Model.Unit.UnitServices.Sum(s => s.MonthlyPrice).ToString("N2")
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                            <i class="bi bi-box-seam text-muted fs-1 mb-3"></i>
                            <h6 class="text-muted fw-normal">No specific services or amenities have been added to this unit.</h6>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow-sm rounded-4 mt-4">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold text-secondary mb-0"><i class="bi bi-people me-2"></i>Current Active Occupants</h5>
        </div>
        <div class="card-body p-4">
            @if (Model.ActiveContracts != null && Model.ActiveContracts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle border rounded-3 overflow-hidden">
                        <thead class="table-light">
                            <tr>
                                <th>Occupant Name</th>
                                <th>Contract Start Date</th>
                                <th>Rent Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contract in Model.ActiveContracts)
                            {
                                <tr>
                                    <td class="fw-semibold">
                                        @contract.Occupant?.FirstName @contract.Occupant?.LastName
                                    </td>
                                    <td>@contract.StartDate.ToString("MMM dd, yyyy")</td>
                                    <td class="text-success fw-bold">₱@contract.RentAmount.ToString("N2")</td>
                                    <td>
                                        <span class="badge bg-success rounded-pill">Active</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                    <i class="bi bi-person-x text-muted fs-1 mb-3"></i>
                    <h6 class="text-muted fw-normal">No active occupants assigned to this unit yet.</h6>
                </div>
            }
        </div>
    </div>
</div>