@page "{buildingId:guid}"
@model MyRoomService.Pages.Units.CreateModel
@{
    ViewData["Title"] = "Add Unit";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">Add New Unit to <span class="text-primary">@Model.BuildingName</span></h4>
                </div>
                <div class="card-body p-4">

                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger shadow-sm rounded-4">
                            <div asp-validation-summary="All" class="text-danger mb-0"></div>
                        </div>
                    }

                    <form method="post" id="unitForm">
                        <input type="hidden" asp-for="BuildingId" />

                        <h5 class="fw-bold mb-3 text-secondary border-bottom pb-2">Unit Details</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Unit.UnitNumber" class="form-label fw-semibold">Unit Number / Name</label>
                                <input asp-for="Unit.UnitNumber" class="form-control" placeholder="e.g. Room 101" required />
                                <span asp-validation-for="Unit.UnitNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Unit.FloorLevel" class="form-label fw-semibold">Floor Level</label>
                                <input asp-for="Unit.FloorLevel" class="form-control" type="number" />
                                <span asp-validation-for="Unit.FloorLevel" class="text-danger"></span>
                            </div>

                            @* --- Add this inside the "Unit Details" row g-3 div --- *@

                            <div class="col-md-6">
                                <label asp-for="Unit.RentalMode" class="form-label fw-semibold">Rental Mode</label>
                                <select asp-for="Unit.RentalMode" class="form-select">
                                    <option value="ENTIRE_UNIT">Entire Unit (Apartment/Commercial Space)</option>
                                    <option value="PER_BED">Per Bed (Dormitory/Boarding House)</option>
                                </select>
                            </div>

                            @* 🚨 NEW: METERED BILLING MODE SELECTION *@
                            <div class="col-md-6">
                                <label asp-for="Unit.MeteredBillingMode" class="form-label fw-semibold">Utility Billing Mode</label>
                                <select asp-for="Unit.MeteredBillingMode"
                                        asp-items="Html.GetEnumSelectList<MyRoomService.Domain.Entities.MeteredBillingMode>()"
                                        class="form-select">
                                </select>
                                <div class="form-text small">Determines how electricity/water bills are distributed if this unit is shared.</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Unit.MaxOccupancy" class="form-label fw-semibold">Max Occupancy</label>
                                <input asp-for="Unit.MaxOccupancy" class="form-control" type="number" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Unit.DefaultRate" class="form-label fw-semibold">Default Rate (Monthly)</label>
                                <div class="input-group">
                                    <span class="input-group-text">₱</span>
                                    <input asp-for="Unit.DefaultRate" class="form-control" type="number" step="0.01" required />
                                </div>
                                <span asp-validation-for="Unit.DefaultRate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Unit.Status" class="form-label fw-semibold">Initial Status</label>
                                <select asp-for="Unit.Status"
                                        asp-items="Html.GetEnumSelectList<MyRoomService.Domain.Entities.UnitStatus>()"
                                        class="form-select">
                                </select>
                                <span asp-validation-for="Unit.Status" class="text-danger"></span>
                            </div>
                        </div>

                        @* --- UNIT SERVICES / CHARGES SECTION --- *@
                        <div class="d-flex justify-content-between align-items-center mb-3 mt-5 border-bottom pb-2">
                            <div>
                                <h5 class="fw-bold mb-0 text-info">
                                    <i class="bi bi-tags me-2"></i>Unit Services & Amenities
                                </h5>
                                <p class="text-muted small mb-0 mt-1">Add baseline charges tied to this unit (e.g., Included Wi-Fi, Premium View).</p>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-info rounded-pill px-3 shadow-sm" data-bs-toggle="modal" data-bs-target="#serviceModal">
                                <i class="bi bi-plus-lg me-1"></i> Add Service
                            </button>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-hover align-middle mb-0 border" id="servicesTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Service / Charge Name</th>
                                        <th class="text-end">Monthly Price</th>
                                        <th class="text-center" style="width: 80px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id="emptyStateRow">
                                        <td colspan="3" class="text-center py-4 text-muted small">
                                            No services added. Click "Add Service" to include default charges for this unit.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-4 pt-3 border-top d-flex justify-content-end gap-2">
                            <a asp-page="/Buildings/ManageBuilding" asp-route-id="@Model.BuildingId" class="btn btn-light px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm fw-bold">Create Unit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* --- UPDATED UNIT SERVICE MODAL WITH DATALIST --- *@
<div class="modal fade" id="serviceModal" tabindex="-1" aria-labelledby="serviceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-dark" id="serviceModalLabel">Add Unit Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @* 🚨 THE DATALIST AUTOSUGGEST *@
                <datalist id="serviceNameSuggestions">
                    @if (Model.CommonServiceNames != null)
                    {
                        foreach (var name in Model.CommonServiceNames)
                        {
                            <option value="@name" />
                        }
                    }
                </datalist>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Service Name</label>
                    <input type="text" id="modalServiceName" list="serviceNameSuggestions" class="form-control border-secondary" placeholder="e.g. Electricity, Water, or LPG" autocomplete="off" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase d-block">Billing Type</label>
                    <div class="btn-group w-100" role="group" aria-label="Billing Type">
                        <input type="radio" class="btn-check" name="billingType" id="typeFixed" value="false" checked autocomplete="off">
                        <label class="btn btn-outline-primary" for="typeFixed">
                            <i class="bi bi-calendar-check me-1"></i> Fixed Fee
                        </label>

                        <input type="radio" class="btn-check" name="billingType" id="typeMetered" value="true" autocomplete="off">
                        <label class="btn btn-outline-primary" for="typeMetered">
                            <i class="bi bi-speedometer2 me-1"></i> Metered
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label id="priceLabel" class="form-label fw-semibold text-primary small text-uppercase">Monthly Price (₱)</label>
                    <input type="number" id="modalMonthlyPrice" step="0.01" class="form-control border-primary shadow-sm fw-bold" placeholder="0.00" />
                    <div id="priceHelp" class="form-text small text-info">Flat amount charged every month.</div>
                </div>

                <div id="meterNumberSection" class="mb-3 d-none">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Meter Serial Number</label>
                    <input type="text" id="modalMeterNumber" class="form-control border-secondary" placeholder="e.g. SN-12345" />
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnAddServiceToList" class="btn btn-primary px-4 shadow-sm">Add to Unit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            let serviceIndex = 0;

            // 🚨 JAVASCRIPT TITLE CASE FORMATTER
            function toTitleCase(str) {
                return str.replace(
                    /\w\S*/g,
                    function(txt) {
                        return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
                    }
                );
            }

            // --- UI Toggle Logic for the Modal ---
            $('input[name="billingType"]').change(function() {
                if ($('#typeMetered').is(':checked')) {
                    $('#priceLabel').text("Rate per Unit (₱)");
                    $('#priceHelp').text("The cost per kWh, Cubic Meter, etc.");
                    $('#meterNumberSection').removeClass('d-none');
                } else {
                    $('#priceLabel').text("Monthly Price (₱)");
                    $('#priceHelp').text("Flat amount charged every month.");
                    $('#meterNumberSection').addClass('d-none');
                }
            });

            // --- Add Service Logic ---
            $('#btnAddServiceToList').click(function () {
                // Apply Title Case styling immediately upon getting the value
                const rawName = $('#modalServiceName').val().trim();
                const name = toTitleCase(rawName);

                const price = parseFloat($('#modalMonthlyPrice').val());
                const isMetered = $('#typeMetered').is(':checked');
                const meterNumber = $('#modalMeterNumber').val().trim();

                if (!name || isNaN(price)) {
                    alert("Please provide a valid service name and price/rate.");
                    return;
                }

                $('#emptyStateRow').hide();

                const typeBadge = isMetered
                    ? '<span class="badge bg-info-soft text-info"><i class="bi bi-speedometer2"></i> Metered</span>'
                    : '<span class="badge bg-light text-muted">Fixed</span>';

                // 🚨 SURGICAL BOOLEAN FIX: Using the strict hidden checkbox pattern
                const tr = $(`
                    <tr>
                        <td class="fw-bold text-dark">
                            ${name} ${typeBadge}
                            <div class="small text-muted">${isMetered ? 'Meter: ' + (meterNumber || 'N/A') : ''}</div>

                            <input type="hidden" name="SelectedServices[${serviceIndex}].Name" value="${name}" />
                            <input type="hidden" name="SelectedServices[${serviceIndex}].MeterNumber" value="${meterNumber}" />

                            <input type="checkbox" name="SelectedServices[${serviceIndex}].IsMetered" value="true" ${isMetered ? 'checked' : ''} style="display:none;" />
                            <input type="hidden" name="SelectedServices[${serviceIndex}].IsMetered" value="false" />
                        </td>
                        <td class="text-end fw-bold text-primary">
                            ₱${price.toFixed(2)}
                            <input type="hidden" name="SelectedServices[${serviceIndex}].MonthlyPrice" value="${price}" />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-danger border-0 rounded-circle remove-service">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `);

                $('#servicesTable tbody').append(tr);
                serviceIndex++;

                // Reset modal fields
                $('#modalServiceName').val('');
                $('#modalMonthlyPrice').val('');
                $('#modalMeterNumber').val('');
                $('#typeFixed').prop('checked', true).trigger('change');

                var modal = bootstrap.Modal.getInstance(document.getElementById('serviceModal'));
                modal.hide();

                reindexServices();
            });

            $('#servicesTable').on('click', '.remove-service', function () {
                $(this).closest('tr').remove();
                if ($('#servicesTable tbody tr').not('#emptyStateRow').length === 0) {
                    $('#emptyStateRow').show();
                }
                reindexServices();
            });

            function reindexServices() {
                $('#servicesTable tbody tr').not('#emptyStateRow').each(function(index) {
                    $(this).find('input[name*="Name"]').attr('name', `SelectedServices[${index}].Name`);
                    $(this).find('input[name*="MonthlyPrice"]').attr('name', `SelectedServices[${index}].MonthlyPrice`);

                    // Update the array index for both parts of the boolean hack
                    $(this).find('input[type="checkbox"][name*="IsMetered"]').attr('name', `SelectedServices[${index}].IsMetered`);
                    $(this).find('input[type="hidden"][name*="IsMetered"]').attr('name', `SelectedServices[${index}].IsMetered`);

                    $(this).find('input[name*="MeterNumber"]').attr('name', `SelectedServices[${index}].MeterNumber`);
                });
                serviceIndex = $('#servicesTable tbody tr').not('#emptyStateRow').length;
            }
        });
    </script>

    <style>
        .bg-info-soft {
            background-color: #e1f5fe;
            color: #0288d1;
            border: 1px solid #b3e5fc;
            padding: 0.35em 0.65em;
        }
    </style>
}