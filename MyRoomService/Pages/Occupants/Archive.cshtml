@page
@model MyRoomService.Pages.Occupants.ArchiveModel
@{
    ViewData["Title"] = "Archive Occupant";
}

<div class="container-fluid py-4 px-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3 me-3">
                            <i class="bi bi-archive-fill fs-4"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Archive Occupant</h4>
                            <p class="text-muted mb-0">Review eligibility before archiving</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="mb-4 text-center">
                        <h5 class="fw-bold">@Model.Occupant.FirstName @Model.Occupant.LastName</h5>
                        <p class="text-muted">@Model.Occupant.Email | @Model.Occupant.Phone</p>
                    </div>

                    @if (Model.CanArchive)
                    {
                        <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
                            <i class="bi bi-check-circle-fill me-2 fs-5"></i>
                            <div>@Model.ArchiveMessage</div>
                        </div>
                        <p class="text-muted mb-4 text-center">
                            Archiving an occupant will hide them from the active directory. Their historical data (invoices, contracts) will be preserved for accounting purposes.
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                            <div>
                                <strong>Action Blocked:</strong><br />
                                @Model.ArchiveMessage
                            </div>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Occupant.Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="./Index" class="btn btn-light rounded-pill px-4">Cancel</a>
                            @if (Model.CanArchive)
                            {
                                <button type="submit" class="btn btn-danger rounded-pill px-4">
                                    <i class="bi bi-archive me-2"></i>Confirm Archive
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>