@page "{id:Guid}"
@using MyRoomService.Domain.Entities
@model MyRoomService.Pages.Occupants.DetailsModel
@{
    ViewData["Title"] = "Occupant Profile";
}

<div class="container-fluid py-4 px-lg-5">

    @* --- Status Messages --- *@
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-4 mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["StatusMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm rounded-4 mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- Header & Quick Actions --- *@
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end mb-4 gap-3">
        <div>
            <h2 class="fw-bold mb-1 text-dark d-flex align-items-center gap-2">
                @Model.Occupant.FullName

                @* KYC Status Badge *@
                <span class="badge @(Model.Occupant.KycStatus == KycStatus.Verified ? "bg-success" : (Model.Occupant.KycStatus == KycStatus.Rejected ? "bg-danger" : "bg-warning text-dark")) rounded-pill fs-6 px-3">
                    @Model.Occupant.KycStatus
                </span>

                @* Archived Badge *@
                @if (Model.Occupant.IsArchived)
                {
                    <span class="badge bg-secondary rounded-pill fs-6 px-3">Archived</span>
                }
            </h2>
            <p class="text-muted mb-0">ID: <span class="font-monospace">@Model.Occupant.Id.ToString().Substring(0, 8).ToUpper()</span></p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.Occupant.Id" class="btn btn-light border rounded-pill px-4 shadow-sm">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>

            @* Only allow New Contract if Verified *@
            @if (Model.Occupant.KycStatus == KycStatus.Verified && !Model.Occupant.IsArchived)
            {
                <a asp-page="/Contracts/Create" asp-route-occupantId="@Model.Occupant.Id" class="btn btn-primary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-plus-lg me-2"></i>New Contract
                </a>
            }
            else
            {
                <button class="btn btn-secondary rounded-pill px-4 shadow-sm" disabled title="Occupant must be Verified and Active to create a contract.">
                    <i class="bi bi-plus-lg me-2"></i>New Contract
                </button>
            }

            @if (!Model.Occupant.IsArchived)
            {
                <a asp-page="./Archive" asp-route-id="@Model.Occupant.Id" class="btn btn-danger rounded-pill px-4 shadow-sm" onclick="return confirm('Are you sure you want to archive this occupant? They will be removed from the active directory.');">
                    <i class="bi bi-archive me-2"></i>Archive
                </a>
            }
        </div>
    </div>

    @* --- KYC Verification Banners --- *@
    @if (Model.Occupant.KycStatus == KycStatus.Pending)
    {
        <div class="alert alert-warning border-0 shadow-sm rounded-4 d-flex align-items-center justify-content-between p-4 mb-4">
            <div>
                <h5 class="fw-bold mb-1"><i class="bi bi-shield-exclamation me-2"></i>Verification Required</h5>
                <p class="mb-0 small text-dark">Confirm the occupant's identity documents before proceeding to contracts.</p>
            </div>
            <div class="d-flex gap-2">
                <form method="post" asp-page-handler="Reject" asp-route-id="@Model.Occupant.Id" onsubmit="return confirm('Are you sure you want to REJECT this occupant\'s KYC verification?');">
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-4 shadow-sm fw-bold">Reject</button>
                </form>
                <form method="post" asp-page-handler="Verify" asp-route-id="@Model.Occupant.Id" onsubmit="return confirm('Are you sure you want to VERIFY this occupant? This will allow them to sign contracts.');">
                    <button type="submit" class="btn btn-success btn-sm rounded-pill px-4 shadow-sm fw-bold">Verify Now</button>
                </form>
            </div>
        </div>
    }
    else if (Model.Occupant.KycStatus == KycStatus.Rejected)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-4 p-4 mb-4 d-flex align-items-center">
            <i class="bi bi-x-circle-fill fs-3 me-3"></i>
            <div>
                <h5 class="fw-bold mb-1">Account Rejected</h5>
                <p class="mb-0 small">This occupant has been flagged as rejected and cannot be assigned to any rental units.</p>
            </div>
        </div>
    }

    <div class="row g-4">
        @* --- Left Column: Profile & Financial Snapshot --- *@
        <div class="col-lg-4">

            @* Financial Health Card *@
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                @{
                    var balanceClass = Model.TotalUnpaidBalance > 0 ? "bg-danger" : "bg-success";
                    var balanceIcon = Model.TotalUnpaidBalance > 0 ? "bi-exclamation-circle" : "bi-check-circle";
                    var balanceText = Model.TotalUnpaidBalance > 0 ? "Outstanding Balance" : "Account in Good Standing";
                }
                <div class="@balanceClass text-white p-4 text-center">
                    <i class="bi @balanceIcon display-4 mb-2 d-block opacity-75"></i>
                    <h2 class="fw-bold mb-0">@Model.TotalUnpaidBalance.ToString("C")</h2>
                    <p class="mb-0 opacity-75 small text-uppercase tracking-wide fw-semibold">@balanceText</p>
                </div>
            </div>

            @* Contact Info Card *@
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <h6 class="fw-bold mb-0 text-secondary text-uppercase tracking-wide">Contact Information</h6>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="text-muted small fw-bold mb-1">Email Address</label>
                        <div class="d-flex align-items-center text-dark">
                            <i class="bi bi-envelope text-primary me-2"></i> @Model.Occupant.Email
                        </div>
                    </div>
                    <div>
                        <label class="text-muted small fw-bold mb-1">Phone Number</label>
                        <div class="d-flex align-items-center text-dark">
                            <i class="bi bi-telephone text-primary me-2"></i> @(Model.Occupant.Phone ?? "Not Provided")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* --- Right Column: Contracts & Invoices --- *@
        <div class="col-lg-8">

            @* Paginated Contracts History (Rule 5) *@
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-bottom pt-4 pb-3 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-file-earmark-text text-primary me-2"></i>Contract History</h5>
                    <a asp-page="/Contracts/Index" asp-route-occupantId="@Model.Occupant.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">View Full Grid</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-secondary">
                                <tr>
                                    <th class="ps-4 border-0">Unit</th>
                                    <th class="border-0">Duration</th>
                                    <th class="border-0">Rent/Mo</th>
                                    <th class="border-0">Status</th>
                                    <th class="pe-4 border-0 text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Contracts.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4 fst-italic">No contracts found for this occupant.</td>
                                    </tr>
                                }
                                @foreach (var contract in Model.Contracts)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-dark">Unit @contract.Unit?.UnitNumber</div>
                                            <div class="text-muted small">@contract.Unit?.Building?.Name</div>
                                        </td>
                                        <td>
                                            <div class="small text-dark">@contract.StartDate.ToString("MMM dd, yyyy") - </div>
                                            <div class="small text-muted">@(contract.EndDate.HasValue? contract.EndDate.Value.ToString("MMM dd, yyyy") : "Ongoing")</div>
                                        </td>
                                        <td class="fw-semibold">@contract.RentAmount.ToString("C")</td>
                                        <td>
                                            @{
                                                var badgeClass = contract.Status switch
                                                {
                                                    Domain.Entities.ContractStatus.Active => "bg-success",
                                                    Domain.Entities.ContractStatus.Terminated => "bg-danger",
                                                    Domain.Entities.ContractStatus.Ended => "bg-secondary",
                                                    Domain.Entities.ContractStatus.Reserved => "bg-info text-dark",
                                                    _ => "bg-primary"
                                                };
                                            }
                                            <span class="badge @badgeClass rounded-pill">@contract.Status</span>
                                        </td>
                                        <td class="pe-4 text-end">
                                            <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                                <a asp-page="/Contracts/Details" asp-route-id="@contract.Id" class="btn btn-white btn-sm px-3 border-end" title="View Details">
                                                    <i class="bi bi-eye text-primary"></i>
                                                </a>

                                                @if (contract.Status == Domain.Entities.ContractStatus.Active)
                                                {
                                                    @* Rule 3: Confirmation modal/alert for terminating actions *@
                                                    <a asp-page="/Contracts/ChangeStatus" asp-route-id="@contract.Id" class="btn btn-white btn-sm px-3" title="Terminate" onclick="return confirm('Are you sure you want to terminate this active contract?');">
                                                        <i class="bi bi-slash-circle text-danger"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @* Pagination Controls (Rule 5) *@
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-white border-top p-3 d-flex justify-content-center">
                        <nav aria-label="Contracts pagination">
                            <ul class="pagination pagination-sm mb-0">
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-route-id="@Model.Occupant.Id" asp-route-CurrentPage="@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>

            @* Top 5 Pending Invoices (Rule 5) *@
            @if (Model.RecentUnpaidInvoices.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 border-danger border-opacity-25">
                    <div class="card-header bg-danger bg-opacity-10 border-bottom-0 pt-3 pb-2 px-4">
                        <h6 class="fw-bold mb-0 text-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i>Action Required: Pending Invoices</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var invoice in Model.RecentUnpaidInvoices)
                            {
                                <a asp-page="/Invoices/Details" asp-route-id="@invoice.Id" class="list-group-item list-group-item-action p-3 border-bottom text-decoration-none">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-bold text-dark mb-1">Invoice @invoice.Id.ToString().Substring(0, 8).ToUpper()</div>
                                            <div class="text-muted small">Due: @invoice.DueDate.ToString("MMM dd, yyyy")</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold text-danger fs-5">@invoice.TotalAmount.ToString("C")</div>
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-2 py-1">UNPAID</span>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 p-3 text-center">
                        <a asp-page="/Invoices/Index" asp-route-SearchTerm="@Model.Occupant.FullName" class="text-decoration-none small text-muted">View all financial records in Billing section</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .tracking-wide { letter-spacing: 0.05em; }
    .btn-white { background-color: #fff; border: 1px solid #dee2e6; }
    .btn-white:hover { background-color: #f8f9fa; }
</style>