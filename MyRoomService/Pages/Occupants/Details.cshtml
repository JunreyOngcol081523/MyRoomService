@page "{id:guid}"
@using MyRoomService.Domain.Entities
@model MyRoomService.Pages.Occupants.DetailsModel

<div class="container py-4">
    @* Status Banner *@
    @if (Model.Occupant.KycStatus == KycStatus.Pending)
    {
        <div class="alert alert-warning border-0 shadow-sm rounded-4 d-flex align-items-center justify-content-between p-4 mb-4">
            <div>
                <h5 class="fw-bold mb-1"><i class="bi bi-shield-exclamation me-2"></i>Verification Required</h5>
                <p class="mb-0 small text-dark">Confirm the occupant's identity documents before proceeding to contracts.</p>
            </div>
            <div class="d-flex gap-2">
                @* Named Handlers call: asp-page-handler="Reject" *@
                <form method="post" asp-page-handler="Reject" asp-route-id="@Model.Occupant.Id">
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">Reject</button>
                </form>
                <form method="post" asp-page-handler="Verify" asp-route-id="@Model.Occupant.Id">
                    <button type="submit" class="btn btn-success btn-sm rounded-pill px-4">Verify Now</button>
                </form>
            </div>
        </div>
    }
    else if (Model.Occupant.KycStatus == KycStatus.Rejected)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-4 mb-4">
            <h5 class="fw-bold mb-1">Account Rejected</h5>
            <p class="mb-0 small">This occupant has been flagged as rejected and cannot be assigned to units.</p>
        </div>
    }

    @* Occupant Profile Card *@
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 pt-4 px-4">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="fw-bold mb-0">Occupant Profile</h4>
                <span class="badge @(Model.Occupant.KycStatus == KycStatus.Verified ? "bg-success" : "bg-secondary") rounded-pill px-3 py-2">
                    @Model.Occupant.KycStatus
                </span>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <label class="small text-muted text-uppercase fw-bold">Full Name</label>
                    <p class="h5">@Model.Occupant.FullName</p>
                </div>
                <div class="col-md-6">
                    <label class="small text-muted text-uppercase fw-bold">Contact</label>
                    <p class="mb-0">@Model.Occupant.Email</p>
                    <p>@Model.Occupant.Phone</p>
                </div>
            </div>
        </div>
    </div>
</div>