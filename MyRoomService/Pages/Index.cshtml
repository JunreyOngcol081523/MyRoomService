@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4 px-lg-5">


    @if (User.Identity.IsAuthenticated)
    {
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold text-dark mb-1">Financial Overview</h2>
                <p class="text-muted">Real-time performance for @DateTime.Now.ToString("MMMM yyyy")</p>
            </div>
        </div>
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 bg-primary text-white h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="bi bi-cash-stack fs-2 opacity-50"></i>
                            <span class="badge bg-white text-primary rounded-pill">Monthly</span>
                        </div>
                        <h6 class="text-uppercase fw-bold opacity-75 small">Total Collected</h6>
                        <h2 class="fw-bold mb-0">₱@Model.MonthlyCollection.ToString("N2")</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="bi bi-exclamation-circle text-danger fs-2"></i>
                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">Outstanding</span>
                        </div>
                        <h6 class="text-uppercase text-muted fw-bold small">Total Collectibles</h6>
                        <h2 class="fw-bold mb-0">₱@Model.TotalCollectibles.ToString("N2")</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="bi bi-people text-warning fs-2"></i>
                        </div>
                        <h6 class="text-uppercase text-muted fw-bold small">Unpaid Occupants</h6>
                        <h2 class="fw-bold mb-0">@Model.UnpaidOccupantsCount <span class="fs-6 fw-normal text-muted">/ @Model.TotalOccupants</span></h2>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="bi bi-graph-up-arrow text-success fs-2"></i>
                        </div>
                        <h6 class="text-uppercase text-muted fw-bold small">Collection Rate</h6>
                        <h2 class="fw-bold mb-2">@Model.CollectionEfficiency.ToString("N1")%</h2>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.CollectionEfficiency%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <h4 class="fw-bold mb-4">Quick Management</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <a asp-page="/Invoices/Index" class="card border-0 shadow-sm rounded-4 text-decoration-none transition-hover h-100">
                            <div class="card-body p-4 d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                                    <i class="bi bi-receipt-cutoff fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-bold text-dark">Active Billing</h6>
                                    <small class="text-muted">Review unpaid invoices</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-page="/Occupants/Index" class="card border-0 shadow-sm rounded-4 text-decoration-none transition-hover h-100">
                            <div class="card-body p-4 d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                                    <i class="bi bi-person-plus fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-bold text-dark">Occupants</h6>
                                    <small class="text-muted">Manage tenant profiles</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <h4 class="fw-bold mb-4">Portfolio Summary</h4>
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span class="text-muted"><i class="bi bi-building me-2"></i> Total Buildings</span>
                            <span class="fw-bold">@Model.TotalBuildings</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span class="text-muted"><i class="bi bi-door-open me-2"></i> Total Occupants</span>
                            <span class="fw-bold">@Model.TotalOccupants</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3 bg-light">
                            <span class="text-muted"><i class="bi bi-shield-check me-2"></i> System Status</span>
                            <span class="badge bg-success rounded-pill">Operational</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container py-5">
            <div class="p-5 mb-5 bg-white rounded-5 shadow-lg border-0 text-center overflow-hidden position-relative">
                <div class="py-4">
                    <div class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 mb-3 fw-bold text-uppercase tracking-wider">
                        Property Management Simplified
                    </div>
                    <h1 class="display-3 fw-extrabold text-dark mb-3">Rent<span class="text-primary">Flow</span></h1>
                    <p class="col-lg-7 mx-auto fs-5 text-muted mb-5">
                        The all-in-one business portal for landlords to manage units, track occupants/tenants,
                        and automate billing with ease.
                    </p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-5 rounded-pill shadow-lg transition-hover">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Access Portal
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                            Get Started
                        </a>
                    </div>
                </div>

                <div class="position-absolute top-0 start-0 w-100 h-100 bg-light opacity-25 z-n1"></div>
            </div>

            <div class="row g-4 text-center">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-4 rounded-4">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-house-door fs-3"></i>
                        </div>
                        <h4 class="fw-bold">Unit Tracking</h4>
                        <p class="text-muted small">Real-time status of your available and occupied rooms across all buildings.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-4 rounded-4">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-wallet2 fs-3"></i>
                        </div>
                        <h4 class="fw-bold">Automated Billing</h4>
                        <p class="text-muted small">Generate invoices and track payments via GCash, Maya, and bank transfers.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-4 rounded-4">
                        <div class="feature-icon bg-info bg-gradient text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-people fs-3"></i>
                        </div>
                        <h4 class="fw-bold">Occupant Portal</h4>
                        <p class="text-muted small">Provide tenants a dedicated space to view balances and capture payments instantly.</p>
                    </div>
                </div>
            </div>
        </div>


    }
</div>

<style>
    .transition-hover {
        transition: transform 0.2s ease-in-out;
    }

        .transition-hover:hover {
            transform: translateY(-3px);
        }

    .fw-extrabold {
        font-weight: 800;
    }

    body {
        background-color: #f8f9fa;
    }
</style>