@page "{id:guid}"
@using MyRoomService.Domain.Entities
@model MyRoomService.Pages.Buildings.ManageBuildingModel
@{
    // We use a fallback so it never crashes even if the model isn't ready
    ViewData["Title"] = Model.Building?.Name ?? "Manage Building";
}
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Check if the URL has a hash (like #rates)
            var hash = window.location.hash;
            if (hash) {
                // Find the tab button that targets this specific hash
                var targetTab = document.querySelector('[data-bs-target="' + hash + '"]');
                if (targetTab) {
                    // Use Bootstrap's Tab constructor to show it
                    var tab = new bootstrap.Tab(targetTab);
                    tab.show();
                }
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            // Edit Modal Data Populate
            $('#editChargeModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                $('#editChargeId').val(button.data('id'));
                $('#editName').val(button.data('name'));
                $('#editAmount').val(button.data('amount'));
                $('#editType').val(button.data('type'));
            });

            // Delete Modal Data Populate
            $('#deleteChargeModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                $('#deleteChargeId').val(button.data('id'));
                $('#deleteChargeName').text(button.data('name'));
            });
        });
    </script>
}
<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-0">@Model.Building.Name</h2>
            <p class="text-muted"><i class="bi bi-geo-alt me-1"></i> @Model.Building.Address</p>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Building.Id" class="btn btn-outline-primary rounded-pill">
                <i class="bi bi-pencil me-1"></i> Edit Settings
            </a>
            <a asp-page="./Index" class="btn btn-light rounded-pill border">Back to Buildings</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white border-bottom-0 pt-3">
            <ul class="nav nav-tabs card-header-tabs" id="manageTab" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active fw-semibold" id="units-tab" data-bs-toggle="tab" data-bs-target="#units" type="button">
                        <i class="bi bi-door-open me-1"></i> Units / Rooms
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-semibold" id="rates-tab" data-bs-toggle="tab" data-bs-target="#rates" type="button">
                        <i class="bi bi-tags me-1"></i> Configure Global Charges
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-4">
            <div class="tab-content" id="manageTabContent">

                <div class="tab-pane fade show active" id="units" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="mb-0">Units or Rooms</h5>
                            <small class="text-muted italic">List of Units or Rooms in this Building or Property.</small>
                        </div>
                        <a asp-page="/Units/Create" asp-route-buildingId="@Model.Building.Id"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg"></i> Add Unit/Room
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Unit #</th>
                                    <th>Floor</th>
                                    <th>Rental Mode</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Units != null && Model.Units.Any())
                                {
                                    foreach (var unit in Model.Units)
                                    {
                                        <tr>
                                            <td><strong>@unit.UnitNumber</strong></td>
                                            <td>Floor @unit.FloorLevel</td>
                                            <td class="text-capitalize">@(unit.RentalMode.ToString().Replace("_", " ").ToLower())</td>
                                            <td>
                                                <span class="badge @(unit.Status == UnitStatus.Available ? "bg-success" : "bg-warning") rounded-pill">
                                                    @unit.Status.ToString()
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group shadow-sm">
                                                    <a asp-page="/Units/Details" asp-route-id="@unit.Id" class="btn btn-sm btn-light border text-primary" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>

                                                    <a asp-page="/Units/Edit" asp-route-id="@unit.Id" class="btn btn-sm btn-light border text-secondary" title="Edit Unit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted italic">
                                            No units added yet. Click "Add Unit" to begin.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="rates" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="mb-0">Global Charges & Fees</h5>
                            <small class="text-muted italic">Applicable to all your properties</small>
                        </div>

                        <button type="button"
                                class="btn btn-primary btn-sm rounded-pill px-3"
                                data-bs-toggle="modal"
                                data-bs-target="#createChargeModal">
                            <i class="bi bi-plus-lg"></i> New Charge Definition
                        </button>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Charge Name</th>
                                    <th>Default Amount</th>
                                    <th>Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Charges != null && Model.Charges.Any())
                                {
                                    foreach (var charge in Model.Charges)
                                    {
                                        <tr>
                                            <td><strong>@charge.Name</strong></td>
                                            <td>₱@charge.DefaultAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-info rounded-pill">@charge.ChargeType</span>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button type="button"
                                                            class="btn btn-sm btn-light border"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#editChargeModal"
                                                            data-id="@charge.Id"
                                                            data-name="@charge.Name"
                                                            data-amount="@charge.DefaultAmount"
                                                            data-type="@charge.ChargeType">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>

                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger border"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteChargeModal"
                                                            data-id="@charge.Id"
                                                            data-name="@charge.Name">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted italic">
                                            No charges defined yet. Click "New Rate" to begin.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createChargeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add Global Charge Definition</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="CreateCharge" asp-route-id="@Model.Building.Id">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Charge Name</label>
                        <input name="Name" class="form-control" placeholder="e.g. Internet, Rice Cooker, Cleaning" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Default Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input name="DefaultAmount" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Charge Type</label>
                            <select name="ChargeType" class="form-select">
                                <option value="RECURRING">Recurring (Monthly)</option>
                                <option value="ONE_TIME">One-Time Fee</option>
                            </select>
                        </div>
                    </div>
                    <small class="text-muted italic">Note: These charges will be available across all your buildings.</small>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Definition</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="editChargeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Edit Charge</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="EditCharge" asp-route-id="@Model.Building.Id">
                <div class="modal-body">
                    <input type="hidden" id="editChargeId" name="ChargeId" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name</label>
                        <input id="editName" name="Name" class="form-control" required />
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold">Default Amount</label>
                            <input id="editAmount" name="DefaultAmount" type="number" step="0.01" class="form-control" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold">Type</label>
                            <select id="editType" name="ChargeType" class="form-select">
                                <option value="RECURRING">RECURRING</option>
                                <option value="ONE_TIME">ONE_TIME</option>
                                <option value="METERED">METERED</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Charge</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteChargeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="DeleteCharge" asp-route-id="@Model.Building.Id">
                <div class="modal-body">
                    <input type="hidden" id="deleteChargeId" name="ChargeId" />
                    <p>Are you sure you want to delete <strong id="deleteChargeName"></strong>?</p>
                    <p class="text-danger small"><i class="bi bi-exclamation-triangle"></i> This cannot be undone and will fail if linked to active contracts.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>