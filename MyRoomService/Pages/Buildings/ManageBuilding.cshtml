@page "{id:guid}"
@model MyRoomService.Pages.Buildings.ManageBuildingModel
@{
    // We use a fallback so it never crashes even if the model isn't ready
    ViewData["Title"] = Model.Building?.Name ?? "Manage Building";
}

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-0">@Model.Building.Name</h2>
            <p class="text-muted"><i class="bi bi-geo-alt me-1"></i> @Model.Building.Address</p>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Building.Id" class="btn btn-outline-primary rounded-pill">
                <i class="bi bi-pencil me-1"></i> Edit Settings
            </a>
            <a asp-page="./Index" class="btn btn-light rounded-pill border">Back to Buildings</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white border-bottom-0 pt-3">
            <ul class="nav nav-tabs card-header-tabs" id="manageTab" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active fw-semibold" id="units-tab" data-bs-toggle="tab" data-bs-target="#units" type="button">
                        <i class="bi bi-door-open me-1"></i> Units / Rooms
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-semibold" id="rates-tab" data-bs-toggle="tab" data-bs-target="#rates" type="button">
                        <i class="bi bi-currency-dollar me-1"></i> Room Rates
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-semibold" id="addons-tab" data-bs-toggle="tab" data-bs-target="#addons" type="button">
                        <i class="bi bi-plus-circle me-1"></i> Add-ons
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-4">
            <div class="tab-content" id="manageTabContent">

                <div class="tab-pane fade show active" id="units" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Building Units</h5>
                        <button class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg"></i> Add Unit
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Unit #</th>
                                    <th>Floor</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-muted italic">
                                    <td colspan="4" class="text-center py-4">No units added yet. Click "Add Unit" to begin.</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="rates" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Pricing Schemes</h5>
                        <button class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg"></i> New Rate
                        </button>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card border rounded-3 h-100">
                                <div class="card-body text-center">
                                    <h6 class="text-uppercase text-muted small fw-bold">Daily Rate</h6>
                                    <h3 class="mb-0">$45.00</h3>
                                    <hr />
                                    <button class="btn btn-sm btn-link text-decoration-none">Edit Rate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="addons" role="tabpanel">
                    <h5>Additional Services</h5>
                    <p class="small text-muted">Manage laundry, parking, or cleaning fees for this building.</p>
                    <button class="btn btn-outline-primary btn-sm">Configure Add-ons</button>
                </div>

            </div>
        </div>
    </div>
</div>