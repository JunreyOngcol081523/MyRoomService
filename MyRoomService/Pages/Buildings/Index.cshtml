@page
@model MyRoomService.Pages.Buildings.IndexModel
@{
    ViewData["Title"] = "Building Management";
}

<div class="container-fluid py-4 px-lg-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0">My Buildings</h2>
            <p class="text-muted mb-0">Manage your property locations and units.</p>
        </div>
        <a asp-page="./Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Add New Building
        </a>
    </div>

    @if (!Model.Building.Any())
    {
        <div class="text-center py-5 bg-white rounded-4 shadow-sm">
            <i class="bi bi-building text-muted opacity-25" style="font-size: 4rem;"></i>
            <h5 class="mt-3">No buildings registered</h5>
            <p class="text-muted">Start by adding your first property location.</p>
            <a asp-page="./Create" class="btn btn-outline-primary btn-sm rounded-pill">Add Building</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var building in Model.Building)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden hover-shadow transition">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                                    <i class="bi bi-building h4 mb-0"></i>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                        <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@building.Id">Edit Details</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                                    </ul>
                                </div>
                            </div>

                            <h5 class="fw-bold mb-1">@building.Name</h5>
                            <p class="text-muted small mb-3">
                                <i class="bi bi-geo-alt me-1"></i> @building.Address
                            </p>

                            <div class="d-flex gap-3 border-top pt-3 mt-3">
                                <div>
                                    <div class="small text-muted fw-semibold">Units</div>
                                    <div class="h6 mb-0">@building.Units.Count</div>
                                </div>
                                <div class="vr opacity-25"></div>
                                <div>
                                    <div class="small text-muted fw-semibold">Status</div>
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-2">Active</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light border-0 p-0">
                            <a asp-page="./ManageBuilding" asp-route-id="@building.Id" class="btn btn-light w-100 rounded-0 py-2 small fw-bold text-primary">
                                Manage Units <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1.5rem rgba(0,0,0,.08) !important;
    }

    .transition {
        transition: all 0.3s ease;
    }
</style>