@page "{id:guid}"
@model MyRoomService.Pages.Buildings.ArchiveModel
@{
    ViewData["Title"] = "Archive Property";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-archive text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="fw-bold">Archive Property?</h2>
                    <p class="text-muted mb-4">
                        Are you sure you want to archive <strong>@Model.Building.Name</strong>?
                        The property and its records will be hidden from the main dashboard but kept for your history.
                    </p>

                    <form method="post">
                        <input type="hidden" asp-for="Building.Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill fw-bold">
                                Yes, Archive Property
                            </button>
                            <a asp-page="./Index" class="btn btn-light btn-lg rounded-pill border">
                                No, Keep Active
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>