@page
@model MyRoomService.Pages.Contracts.IndexModel
@{
    ViewData["Title"] = "Contracts";
}

<div class="container-fluid py-4 px-lg-5">
    @* --- Header Section --- *@
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end mb-4 gap-3">
        <div>
            <h2 class="fw-bold mb-0 text-dark">
                @(ViewData["FilterName"] != null ? $"Contracts: {ViewData["FilterName"]}" : "Contract Management")
            </h2>
            <p class="text-muted mb-0">
                @(ViewData["FilterName"] != null
                                ? "Showing all historical and active agreements for this occupant." 
                                                                                : "Overview of all rental agreements across your properties.")
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (ViewData["FilterName"] != null)
            {
                <a asp-page="/Occupants/Index" class="btn btn-outline-secondary rounded-pill px-3 shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Back to Occupants
                </a>
            }

            @if (Model.CurrentOccupantId == null)
            {
                <button type="button" class="btn btn-secondary rounded-pill px-4 shadow-sm" disabled title="Please select an occupant first to create a contract.">
                    <i class="bi bi-plus-lg me-2"></i>New Contract
                </button>
            }
            else
            {
                <a asp-page="./Create" asp-route-occupantId="@Model.CurrentOccupantId" class="btn btn-primary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-plus-lg me-2"></i>New Contract
                </a>
            }
        </div>
    </div>

    @* --- Filter Section --- *@
    <form method="get" class="card border-0 shadow-sm rounded-4 mb-4 p-3 bg-light">
        @if (Model.CurrentOccupantId.HasValue)
        {
            <input type="hidden" name="occupantId" value="@Model.CurrentOccupantId" />
        }
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label text-muted small mb-1 fw-bold">Search Occupant</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" asp-for="SearchOccupant" class="form-control border-start-0 ps-0" placeholder="Occupant Name..." />
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted small mb-1 fw-bold">Building</label>
                <select asp-for="FilterBuildingId" asp-items="Model.Buildings" class="form-select" onchange="this.form.submit()">
                    <option value="">All Buildings</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted small mb-1 fw-bold">Unit</label>
                <select asp-for="FilterUnitId" asp-items="Model.Units" class="form-select" onchange="this.form.submit()">
                    <option value="">All Units</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted small mb-1 fw-bold">Status</label>
                <select asp-for="FilterStatus" asp-items="Model.Statuses" class="form-select" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill"><i class="bi bi-funnel me-1"></i> Filter</button>
                    <a asp-page="./Index" asp-route-occupantId="@Model.CurrentOccupantId" class="btn btn-outline-secondary w-100 rounded-pill">Clear</a>
                </div>
            </div>
        </div>
    </form>

    @* --- Contracts Grid --- *@
    @if (!Model.Contracts.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-3"><i class="bi bi-file-earmark-x"></i></div>
            <h4 class="text-secondary fw-semibold">No contracts found</h4>
            <p class="text-muted">
                @(Model.CurrentOccupantId.HasValue
                            ? "This occupant doesn't have any contracts matching the selected filters yet." 
                                            : "You haven't added any contracts matching the selected filters yet.")
            </p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.Contracts)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-shadow transition">
                        @* Card Header Status Banner *@
                        @{
                            var bannerClass = item.Status switch
                            {
                                Domain.Entities.ContractStatus.Active => "bg-success",
                                Domain.Entities.ContractStatus.Terminated => "bg-danger",
                                Domain.Entities.ContractStatus.Ended => "bg-secondary",
                                Domain.Entities.ContractStatus.Reserved => "bg-info text-dark",
                                _ => "bg-primary"
                            };
                            var statusText = item.Status.ToString().ToUpper();
                        }
                        <div class="@bannerClass py-2 px-3 text-white fw-bold d-flex justify-content-between align-items-center">
                            <span class="small tracking-wide"><i class="bi bi-circle-fill me-2" style="font-size: 0.5rem;"></i>@statusText</span>
                            <span class="badge bg-white bg-opacity-25 rounded-pill">@item.BillingDay@((item.BillingDay % 10 == 1 && item.BillingDay != 11) ? "st" : (item.BillingDay % 10 == 2 && item.BillingDay != 12) ? "nd" : (item.BillingDay % 10 == 3 && item.BillingDay != 13) ? "rd" : "th") of Month</span>
                        </div>

                        <div class="card-body p-4">
                            @* Occupant & Unit Info *@
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="fw-bold mb-1 text-dark">@item.Occupant?.FirstName @item.Occupant?.LastName</h5>
                                    <p class="text-muted small mb-0"><i class="bi bi-building me-1"></i> @item.Unit?.Building?.Name - Unit @item.Unit?.UnitNumber</p>
                                </div>
                                <div class="avatar-circle-sm bg-light text-primary border">
                                    <i class="bi bi-person"></i>
                                </div>
                            </div>

                            <hr class="text-muted opacity-25">

                            @* Financials *@
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <p class="text-muted small mb-0">Monthly Rent</p>
                                    <h6 class="fw-bold text-dark mb-0">@item.RentAmount.ToString("C")</h6>
                                </div>
                                <div class="col-6 border-start ps-3">
                                    <p class="text-muted small mb-0">Duration</p>
                                    <h6 class="fw-bold text-dark mb-0">
                                        @item.StartDate.ToString("MMM yyyy") -
                                        @(item.EndDate.HasValue? item.EndDate.Value.ToString("MMM yyyy") : "Ongoing")
                                    </h6>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-3 pt-0">
                            <div class="d-flex justify-content-between align-items-center">

                                @* Left side: Details and Edit Actions *@
                                <div>
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-light btn-sm rounded-pill px-3 shadow-sm text-primary fw-semibold">
                                        View Details
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm rounded-circle shadow-sm text-secondary ms-1" title="Edit Contract" style="width: 31px; height: 31px; padding: 4px;">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>

                                @* Right side: Status Actions *@
                                @if (item.Status == Domain.Entities.ContractStatus.Reserved)
                                {
                                    <a asp-page="./ChangeStatus" asp-route-id="@item.Id" class="btn btn-success btn-sm rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-play-circle me-1"></i> Activate
                                    </a>
                                }
                                else if (item.Status == Domain.Entities.ContractStatus.Active)
                                {
                                    <a asp-page="./ChangeStatus" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                        <i class="bi bi-slash-circle me-1"></i> Terminate
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-4px);
        box-shadow: 0 .5rem 1.5rem rgba(0,0,0,.1) !important;
    }

    .transition {
        transition: all 0.3s ease;
    }

    .avatar-circle-sm {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.85rem;
    }

    .tracking-wide {
        letter-spacing: 0.05em;
    }
</style>