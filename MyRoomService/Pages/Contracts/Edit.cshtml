@page "{id:Guid}"
@model MyRoomService.Pages.Contracts.EditModel
@{
    ViewData["Title"] = "Edit Contract";
}

<div class="container-fluid py-4 px-lg-5">
    @* --- Header --- *@
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-dark">Edit Contract</h2>
            <p class="text-muted mb-0">Updating agreement for <span class="fw-bold text-primary">@Model.OccupantName</span></p>
        </div>
        <a asp-page="/Contracts/Index"
           asp-route-occupantId="@Model.Contract.OccupantId" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <form method="post">
        @* HIDDEN FIELDS: Critical for Entity Framework to know what to update *@
        <input type="hidden" asp-for="Contract.Id" />
        <input type="hidden" asp-for="Contract.TenantId" />
        <input type="hidden" asp-for="Contract.OccupantId" />
        <input type="hidden" asp-for="Contract.UnitId" />

        <div class="row g-4">
            @* --- Left Column: Locked Details --- *@
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4 h-100 bg-light bg-opacity-50">
                    <div class="card-body p-4 p-xl-5">
                        <h5 class="fw-bold mb-4 text-secondary">
                            <i class="bi bi-lock-fill me-2"></i>Locked Details
                        </h5>
                        <p class="small text-muted mb-4">
                            Occupant and Unit assignments cannot be changed once a contract is created.
                        </p>

                        @* OCCUPANT (Read-Only) *@
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small text-uppercase">Occupant Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-person-fill text-muted"></i></span>
                                <input type="text" class="form-control bg-light border-0 fw-bold text-dark" value="@Model.OccupantName" readonly disabled />
                            </div>
                        </div>

                        @* UNIT (Read-Only) *@
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small text-uppercase">Assigned Unit</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-door-open-fill text-muted"></i></span>
                                <input type="text" class="form-control bg-light border-0 fw-bold text-dark" value="@Model.UnitDisplayName" readonly disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* --- Right Column: Editable Terms & Financials --- *@
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 p-xl-5">
                        <h5 class="fw-bold mb-4 text-primary">
                            <i class="bi bi-pencil-square me-2"></i>Editable Terms
                        </h5>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Contract.StartDate" class="form-label fw-semibold text-muted small text-uppercase">Start Date</label>
                                <input asp-for="Contract.StartDate" type="date" class="form-control form-control-lg rounded-3 bg-light border-0" />
                                <span asp-validation-for="Contract.StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Contract.EndDate" class="form-label fw-semibold text-muted small text-uppercase">End Date</label>
                                <input asp-for="Contract.EndDate" type="date" class="form-control form-control-lg rounded-3 bg-light border-0" />
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-8">
                                <label asp-for="Contract.RentAmount" class="form-label fw-semibold text-muted small text-uppercase">Base Monthly Rent</label>
                                <div class="input-group input-group-lg shadow-none">
                                    <span class="input-group-text bg-light border-0 text-muted">₱</span>
                                    <input asp-for="Contract.RentAmount" type="number" step="0.01" class="form-control bg-light border-0 fw-bold" />
                                </div>
                                <span asp-validation-for="Contract.RentAmount" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Contract.BillingDay" class="form-label fw-semibold text-muted small text-uppercase">Billing Day</label>
                                <input asp-for="Contract.BillingDay" type="number" min="1" max="31" class="form-control form-control-lg rounded-3 bg-light border-0" />
                            </div>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Contract.Status" class="form-label fw-semibold text-muted small text-uppercase">Contract Status</label>
                            <select asp-for="Contract.Status"
                                    class="form-select form-select-lg rounded-3 bg-light border-0 fw-bold text-dark"
                                    asp-items="Model.ContractStatusOptions">
                            </select>
                            <div class="form-text small mt-2">Setting this to 'Ended' or 'Terminated' will free up the unit.</div>
                        </div>
                    </div>
                </div>
            </div>

            @* --- Bottom: Add-Ons Summary Table --- *@
            <div class="col-12">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4 p-xl-5">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h5 class="fw-bold mb-0 text-info">
                                    <i class="bi bi-plus-square-dotted me-2"></i>Recurring Add-ons
                                </h5>
                                <p class="text-muted small mb-0 mt-1">Manage optional recurring charges billed with rent.</p>
                            </div>
                            <button type="button" class="btn btn-outline-info rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addonModal">
                                <i class="bi bi-plus-lg me-1"></i> Add Charge
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="addonsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Charge Name</th>
                                        <th>Type</th>
                                        <th class="text-end">Agreed Amount (₱)</th>
                                        <th class="text-center" style="width: 80px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ExistingAddOns != null && Model.ExistingAddOns.Any())
                                    {
                                        int index = 0;
                                        foreach (var addon in Model.ExistingAddOns)
                                        {
                                            <tr>
                                                <td class="fw-bold text-dark">
                                                    @addon.ChargeName
                                                    <input type="hidden" name="SelectedAddOns[@index].ChargeDefinitionId" value="@addon.ChargeDefinitionId" />
                                                </td>
                                                <td class="text-muted small">@addon.ChargeType</td>
                                                <td class="text-end fw-bold text-primary">
                                                    ₱@addon.AgreedAmount.ToString("0.00")
                                                    <input type="hidden" name="SelectedAddOns[@index].AgreedAmount" value="@addon.AgreedAmount" />
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-sm btn-outline-danger border-0 rounded-circle remove-addon">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            index++;
                                        }
                                    }
                                    <tr id="emptyStateRow" style="display: @(Model.ExistingAddOns != null && Model.ExistingAddOns.Any() ? "none" : "table-row");">
                                        <td colspan="4" class="text-center py-4 text-muted">
                                            No add-ons selected. Click "Add Charge" to include items like Parking or Wi-Fi.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end gap-3 mt-2">
                <a asp-page="/Contracts/Index" asp-route-occupantId="@Model.Contract.OccupantId" class="btn btn-light btn-lg rounded-pill px-4 fw-bold">
                    Cancel
                </a>
                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm fw-bold">
                    <i class="bi bi-save2 me-2"></i> Save Changes
                </button>
            </div>
        </div>
    </form>
</div>

@* --- ADD-ON MODAL (Identical to Create page) --- *@
<div class="modal fade" id="addonModal" tabindex="-1" aria-labelledby="addonModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-dark" id="addonModalLabel">Add Recurring Charge</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Select Charge</label>
                    <select id="modalChargeSelect" class="form-select form-select-lg bg-light border-0 rounded-3">
                        <option value="">-- Choose an Add-on --</option>
                    </select>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-6">
                        <label class="form-label fw-semibold text-muted small text-uppercase">Charge Type</label>
                        <input type="text" id="modalChargeType" class="form-control bg-white text-muted" readonly placeholder="-" />
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-semibold text-muted small text-uppercase">Default (₱)</label>
                        <input type="text" id="modalDefaultAmount" class="form-control bg-white text-muted" readonly placeholder="0.00" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary small text-uppercase">Agreed Amount (₱)</label>
                    <input type="number" id="modalAgreedAmount" step="0.01" class="form-control form-control-lg border-primary shadow-sm rounded-3 fw-bold" placeholder="0.00" />
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnAddChargeToList" class="btn btn-primary rounded-pill px-4 shadow-sm">Add to Contract</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Note: We don't need the Building/Unit Cascading dropdown code here because Unit is locked!

            // ==========================================
            // ADD-ONS MODAL LOGIC
            // ==========================================

            const availableAddOns = @Html.Raw(Model.AvailableAddOnsJson ?? "[]");

            // Set the index to the current number of rows (minus the empty state row)
            let addOnIndex = $('#addonsTable tbody tr').not('#emptyStateRow').length;

            const modalSelect = $('#modalChargeSelect');
            availableAddOns.forEach(addon => {
                modalSelect.append(new Option(addon.Name, addon.Id));
            });

            modalSelect.change(function () {
                const selectedId = $(this).val();
                const addon = availableAddOns.find(a => a.Id === selectedId);

                if (addon) {
                    $('#modalChargeType').val(addon.ChargeType);
                    $('#modalDefaultAmount').val(addon.DefaultAmount.toFixed(2));
                    $('#modalAgreedAmount').val(addon.DefaultAmount.toFixed(2));
                } else {
                    $('#modalChargeType').val('');
                    $('#modalDefaultAmount').val('');
                    $('#modalAgreedAmount').val('');
                }
            });

            $('#btnAddChargeToList').click(function () {
                const selectedId = $('#modalChargeSelect').val();
                const name = $('#modalChargeSelect option:selected').text();
                const type = $('#modalChargeType').val();
                const amount = parseFloat($('#modalAgreedAmount').val());

                if (!selectedId || isNaN(amount)) {
                    alert("Please select a charge and enter a valid agreed amount.");
                    return;
                }

                $('#emptyStateRow').hide();

                // Generate new row HTML using the updated index
                const tr = $(`
                    <tr>
                        <td class="fw-bold text-dark">
                            ${name}
                            <input type="hidden" name="SelectedAddOns[${addOnIndex}].ChargeDefinitionId" value="${selectedId}" />
                        </td>
                        <td class="text-muted small">${type}</td>
                        <td class="text-end fw-bold text-primary">
                            ₱${amount.toFixed(2)}
                            <input type="hidden" name="SelectedAddOns[${addOnIndex}].AgreedAmount" value="${amount}" />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-danger border-0 rounded-circle remove-addon">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `);

                $('#addonsTable tbody').append(tr);
                addOnIndex++;

                $('#modalChargeSelect').val('').trigger('change');
                var modal = bootstrap.Modal.getInstance(document.getElementById('addonModal'));
                modal.hide();

                // Re-index all hidden inputs to prevent binding errors if they delete a row in the middle
                reindexAddOns();
            });

            $('#addonsTable').on('click', '.remove-addon', function () {
                $(this).closest('tr').remove();

                if ($('#addonsTable tbody tr').not('#emptyStateRow').length === 0) {
                    $('#emptyStateRow').show();
                }

                // Re-index after removing
                reindexAddOns();
            });

            // Function to ensure the indexes (0, 1, 2) are sequential before form submission
            function reindexAddOns() {
                $('#addonsTable tbody tr').not('#emptyStateRow').each(function(index) {
                    $(this).find('input[name*="ChargeDefinitionId"]').attr('name', `SelectedAddOns[${index}].ChargeDefinitionId`);
                    $(this).find('input[name*="AgreedAmount"]').attr('name', `SelectedAddOns[${index}].AgreedAmount`);
                });
                addOnIndex = $('#addonsTable tbody tr').not('#emptyStateRow').length;
            }

            // Re-index immediately on page load just to be safe
            reindexAddOns();
        });
    </script>
}