@page "{occupantId:Guid}"
@model MyRoomService.Pages.Contracts.CreateModel
@{
    ViewData["Title"] = "Create Contract";
}

<div class="container-fluid py-4 px-lg-5">
    @* --- Header --- *@
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-dark">New Contract</h2>
            <p class="text-muted mb-0">Creating agreement for <span class="fw-bold text-primary">@Model.OccupantName</span></p>
        </div>
        <a asp-page="/Contracts/Index"
           asp-route-occupantId="@Model.Contract.OccupantId" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-x-lg me-2"></i>Cancel
        </a>
    </div>

    <form method="post">
        @* HIDDEN FIELD: Essential to pass the ID back to the server *@
        <input type="hidden" asp-for="Contract.OccupantId" />

        <div class="row g-4">

            @* --- Left Column: Property Details --- *@
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 p-xl-5">
                        <h5 class="fw-bold mb-4 text-primary">
                            <i class="bi bi-geo-alt-fill me-2"></i>Property Details
                        </h5>

                        @* READ-ONLY OCCUPANT FIELD *@
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small text-uppercase">Occupant Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-person-check-fill text-muted"></i></span>
                                <input type="text" class="form-control bg-light border-0 fw-bold text-dark" value="@Model.OccupantName" readonly />
                            </div>
                        </div>

                        <hr class="my-4 border-secondary border-opacity-10" />

                        @* BUILDING COMBOBOX *@
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small text-uppercase">Building</label>
                            <select id="BuildingSelect" class="form-select form-select-lg rounded-3 bg-white border shadow-sm" asp-items="Model.BuildingsList">
                                <option value="">-- Select Building --</option>
                            </select>
                        </div>

                        @* UNIT COMBOBOX (Dependent) *@
                        <div class="mb-2">
                            <label asp-for="Contract.UnitId" class="form-label fw-semibold text-muted small text-uppercase">Unit</label>
                            <select asp-for="Contract.UnitId" id="UnitSelect" class="form-select form-select-lg rounded-3 bg-light border-0" disabled>
                                <option value="">-- Select Unit --</option>
                                @* Options will be loaded via JavaScript based on Building selection *@
                            </select>
                            <div class="form-text small mt-2 text-muted">
                                <i class="bi bi-info-circle me-1"></i>Select a building above to see available units.
                            </div>
                            <span asp-validation-for="Contract.UnitId" class="text-danger small"></span>
                            <div id="spacesAvailableLabel" class="mt-2" style="display:none;">
                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3 py-2">
                                    <i class="bi bi-door-open me-1"></i>
                                    Spaces Available: <strong id="spacesAvailableCount">0</strong>
                                </span>
                            </div>
                        </div>

                        @* --- NEW: INCLUDED UNIT SERVICES CONTAINER --- *@
                        <div id="unitServicesContainer" class="mt-4" style="display: none;">
                            <label class="form-label fw-semibold text-muted small text-uppercase mb-2">Included Unit Services</label>
                            <div class="bg-light border border-opacity-50 rounded-3 p-3">
                                <table class="table table-sm table-borderless mb-0">
                                    <tbody id="unitServicesList">
                                        @* Javascript will inject unit baseline services here *@
                                    </tbody>
                                </table>
                            </div>
                            <div class="form-text small mt-1 text-muted">These are baseline charges permanently attached to this unit.</div>
                        </div>

                    </div>
                </div>
            </div>

            @* --- Right Column: Terms & Financials --- *@
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 p-xl-5">
                        <h5 class="fw-bold mb-4 text-success">
                            <i class="bi bi-cash-coin me-2"></i>Terms & Rent
                        </h5>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Contract.StartDate" class="form-label fw-semibold text-muted small text-uppercase">Start Date</label>
                                <input asp-for="Contract.StartDate" type="date" class="form-control form-control-lg rounded-3 bg-light border-0" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Contract.EndDate" class="form-label fw-semibold text-muted small text-uppercase">End Date (Optional)</label>
                                <input asp-for="Contract.EndDate" type="date" class="form-control form-control-lg rounded-3 bg-light border-0" />
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-8">
                                <label asp-for="Contract.RentAmount" class="form-label fw-semibold text-muted small text-uppercase">Base Monthly Rent</label>
                                <div class="input-group input-group-lg shadow-none">
                                    <span class="input-group-text bg-light border-0 text-muted">₱</span>
                                    <input asp-for="Contract.RentAmount" type="number" step="0.01" class="form-control bg-light border-0 fw-bold" placeholder="0.00" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Contract.BillingDay" class="form-label fw-semibold text-muted small text-uppercase">Billing Day</label>
                                <input asp-for="Contract.BillingDay" type="number" min="1" max="31" class="form-control form-control-lg rounded-3 bg-light border-0" />
                            </div>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Contract.Status" class="form-label fw-semibold text-muted small text-uppercase">Initial Status</label>
                            <select asp-for="Contract.Status" class="form-select form-select-lg rounded-3 bg-light border-0" asp-items="Html.GetEnumSelectList<MyRoomService.Domain.Entities.ContractStatus>()">
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            @* --- Bottom: Add-Ons Summary Table --- *@
            <div class="col-12">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4 p-xl-5">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h5 class="fw-bold mb-0 text-info">
                                    <i class="bi bi-plus-square-dotted me-2"></i>Optional Add-ons
                                </h5>
                                <p class="text-muted small mb-0 mt-1">Optional recurring charges billed with rent (e.g. Parking, Extra Bed).</p>
                            </div>
                            <button type="button" class="btn btn-outline-info rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addonModal">
                                <i class="bi bi-plus-lg me-1"></i> Add Charge
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="addonsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Charge Name</th>
                                        <th>Type</th>
                                        <th class="text-end">Agreed Amount (₱)</th>
                                        <th class="text-center" style="width: 80px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id="emptyStateRow">
                                        <td colspan="4" class="text-center py-4 text-muted">
                                            No add-ons selected. Click "Add Charge" to include optional items.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 text-end mt-2">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm fw-bold">
                    <i class="bi bi-file-earmark-check me-2"></i> Finalize Contract
                </button>
            </div>
        </div>
    </form>
</div>

@* --- ADD-ON MODAL --- *@
<div class="modal fade" id="addonModal" tabindex="-1" aria-labelledby="addonModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-dark" id="addonModalLabel">Add Recurring Charge</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Select Charge</label>
                    <select id="modalChargeSelect" class="form-select form-select-lg bg-light border-0 rounded-3">
                        <option value="">-- Choose an Add-on --</option>
                    </select>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-6">
                        <label class="form-label fw-semibold text-muted small text-uppercase">Charge Type</label>
                        <input type="text" id="modalChargeType" class="form-control bg-white text-muted" readonly placeholder="-" />
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-semibold text-muted small text-uppercase">Default (₱)</label>
                        <input type="text" id="modalDefaultAmount" class="form-control bg-white text-muted" readonly placeholder="0.00" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary small text-uppercase">Agreed Amount (₱)</label>
                    <input type="number" id="modalAgreedAmount" step="0.01" class="form-control form-control-lg border-primary shadow-sm rounded-3 fw-bold" placeholder="0.00" />
                    <div class="form-text small mt-1">You can override the default amount for this specific contract.</div>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnAddChargeToList" class="btn btn-primary rounded-pill px-4 shadow-sm">Add to Contract</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            // ==========================================
            // 1. CASCADING DROPDOWN (Building -> Unit)
            // ==========================================
        let unitsData = [];

        $('#BuildingSelect').change(function () {
            var buildingId = $(this).val();
            var unitSelect = $('#UnitSelect');

            unitSelect.empty();
            unitSelect.append('<option value="">-- Select Unit --</option>');
            unitSelect.prop('disabled', true);
            $('#unitServicesContainer').hide();
            $('#spacesAvailableLabel').hide(); // reset label

            if (buildingId) {
                $.getJSON(`?handler=Units&buildingId=${buildingId}`, function (data) {
                    unitsData = data; // store for lookup
                    $.each(data, function (i, item) {
                        unitSelect.append($('<option>', {
                            value: item.value,
                            text: item.text
                        }));
                    });
                    if (data.length > 0) {
                        unitSelect.prop('disabled', false);
                    }
                });
            }
        });

            // ==========================================
            // 2. FETCH UNIT SERVICES ON UNIT SELECTION
            // ==========================================
            $('#UnitSelect').change(function () {
                var unitId = $(this).val();
                var $container = $('#unitServicesContainer');
                var $list = $('#unitServicesList');

                // Clear out old services
                $list.empty();

                if (!unitId) {
                    $container.hide();
                    return;
                }
                const selected = unitsData.find(u => u.value === unitId);
                if (selected) {
                    $('#spacesAvailableCount').text(selected.spacesAvailable);
                    $('#spacesAvailableLabel').show();
                }
                // Fetch the baseline unit services
                $.getJSON(`?handler=UnitServices&unitId=${unitId}`, function (data) {
                    if (data && data.length > 0) {
                        $.each(data, function (i, item) {
                            // Render a read-only row with hidden inputs for snapshotting
                            var row = `
                                <tr>
                                    <td class="fw-bold text-dark ps-0 border-bottom border-secondary border-opacity-10 py-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>${item.name}
                                        <input type="hidden" name="IncludedUnitServices[${i}].Name" value="${item.name}" />
                                    </td>
                                    <td class="text-end fw-bold text-muted pe-0 border-bottom border-secondary border-opacity-10 py-2">
                                        ₱${parseFloat(item.monthlyPrice).toFixed(2)}
                                        <input type="hidden" name="IncludedUnitServices[${i}].MonthlyPrice" value="${item.monthlyPrice}" />
                                    </td>
                                </tr>
                            `;
                            $list.append(row);
                        });
                        $container.fadeIn();
                    } else {
                        // Show empty state inside the container
                        $list.append('<tr><td class="text-muted small ps-0 fst-italic">No base services included with this unit.</td></tr>');
                        $container.fadeIn();
                    }
                });
            });

            // ==========================================
            // 3. ADD-ONS MODAL LOGIC
            // ==========================================

            // Parse the JSON data passed from the backend
            const availableAddOns = @Html.Raw(Model.AvailableAddOnsJson);
            let addOnIndex = 0;

            // Populate Modal Dropdown
            const modalSelect = $('#modalChargeSelect');
            availableAddOns.forEach(addon => {
                modalSelect.append(new Option(addon.Name, addon.Id));
            });

            // Handle Modal Dropdown Change
            modalSelect.change(function () {
                const selectedId = $(this).val();
                const addon = availableAddOns.find(a => a.Id === selectedId);

                if (addon) {
                    $('#modalChargeType').val(addon.ChargeType);
                    $('#modalDefaultAmount').val(addon.DefaultAmount.toFixed(2));
                    $('#modalAgreedAmount').val(addon.DefaultAmount.toFixed(2));
                } else {
                    $('#modalChargeType').val('');
                    $('#modalDefaultAmount').val('');
                    $('#modalAgreedAmount').val('');
                }
            });

            // Handle "Add to Contract" Button inside Modal
            $('#btnAddChargeToList').click(function () {
                const selectedId = $('#modalChargeSelect').val();
                const name = $('#modalChargeSelect option:selected').text();
                const type = $('#modalChargeType').val();
                const amount = parseFloat($('#modalAgreedAmount').val());

                if (!selectedId || isNaN(amount)) {
                    alert("Please select a charge and enter a valid agreed amount.");
                    return;
                }

                $('#emptyStateRow').hide();

                const tr = $(`
                    <tr>
                        <td class="fw-bold text-dark">
                            ${name}
                            <input type="hidden" name="SelectedAddOns[${addOnIndex}].ChargeDefinitionId" value="${selectedId}" />
                        </td>
                        <td class="text-muted small">${type}</td>
                        <td class="text-end fw-bold text-primary">
                            ₱${amount.toFixed(2)}
                            <input type="hidden" name="SelectedAddOns[${addOnIndex}].AgreedAmount" value="${amount}" />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-danger border-0 rounded-circle remove-addon">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `);

                $('#addonsTable tbody').append(tr);
                addOnIndex++;

                $('#modalChargeSelect').val('').trigger('change');
                var modal = bootstrap.Modal.getInstance(document.getElementById('addonModal'));
                modal.hide();
            });

            // Handle Remove Button inside Table
            $('#addonsTable').on('click', '.remove-addon', function () {
                $(this).closest('tr').remove();

                if ($('#addonsTable tbody tr').length === 1) {
                    $('#emptyStateRow').show();
                }
            });
        });
    </script>
}