@page "{id:Guid}"
@model MyRoomService.Pages.Contracts.DetailsModel
@{
    ViewData["Title"] = "Contract Details";
}

<div class="container-fluid py-4 px-lg-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end mb-4 gap-3">
        <div>
            <h2 class="fw-bold mb-0 text-dark">Contract Overview</h2>
            <p class="text-muted mb-0">Reference: <span class="fw-semibold font-monospace">@Model.Contract.Id.ToString().Substring(0, 8).ToUpper()</span></p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Index" asp-route-occupantId="@Model.Contract.OccupantId" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
            @* We will hook this up to your new Print page later! *@
            <a asp-page="./Print" asp-route-id="@Model.Contract.Id" class="btn btn-dark rounded-pill px-4 shadow-sm" target="_blank">
                <i class="bi bi-printer me-2"></i>Print Contract
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.Contract.Id" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="bi bi-pencil me-2"></i>Edit Contract
            </a>
        </div>
    </div>

    <div class="row g-4">
        @* --- Left Column: Primary Information --- *@
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-info-circle text-primary me-2"></i>Lease Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold mb-1">Occupant</label>
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle-sm bg-light text-primary border me-3">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0">@Model.Contract.Occupant.FirstName @Model.Contract.Occupant.LastName</h6>
                                    <a asp-page="/Occupants/Details" asp-route-id="@Model.Contract.OccupantId" class="text-decoration-none small">View Profile</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold mb-1">Property Location</label>
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle-sm bg-light text-primary border me-3">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0">Unit @Model.Contract.Unit.UnitNumber</h6>
                                    <span class="text-muted small">@Model.Contract.Unit.Building.Name</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <hr class="text-muted opacity-25">
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted small fw-bold mb-1">Status</label>
                            <div>
                                @{
                                    var badgeClass = Model.Contract.Status switch
                                    {
                                        Domain.Entities.ContractStatus.Active => "bg-success text-white",
                                        Domain.Entities.ContractStatus.Terminated => "bg-danger text-white",
                                        Domain.Entities.ContractStatus.Ended => "bg-secondary text-white",
                                        Domain.Entities.ContractStatus.Reserved => "bg-info text-dark",
                                        _ => "bg-primary text-white"
                                    };
                                }
                                <span class="badge @badgeClass rounded-pill px-3 py-2 border">@Model.Contract.Status.ToString()</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-bold mb-1">Start Date</label>
                            <h6 class="fw-semibold mb-0">@Model.Contract.StartDate.ToString("MMM dd, yyyy")</h6>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-bold mb-1">End Date</label>
                            <h6 class="fw-semibold mb-0">
                                @(Model.Contract.EndDate.HasValue? Model.Contract.EndDate.Value.ToString("MMM dd, yyyy") : "Ongoing")
                            </h6>
                        </div>
                    </div>
                </div>
            </div>

            @* --- Included Services (from the Unit) --- *@
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-box-seam text-info me-2"></i>Included Unit Services</h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.Contract.Unit.UnitServices != null && Model.Contract.Unit.UnitServices.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-secondary">
                                    <tr>
                                        <th class="rounded-start border-0">Service Name</th>
                                        <th class="rounded-end border-0 text-end">Monthly Cost</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model.Contract.Unit.UnitServices)
                                    {
                                        <tr>
                                            <td class="fw-semibold text-dark border-bottom-0 py-3">@service.Name</td>
                                            <td class="text-end border-bottom-0 py-3">@service.MonthlyPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0 fst-italic">This unit does not have any built-in services attached to it.</p>
                    }
                </div>
            </div>
        </div>

        @* --- Right Column: Financial Breakdown --- *@
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-light">
                <div class="card-header bg-transparent border-bottom-0 pt-4 pb-0 px-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-wallet2 text-success me-2"></i>Financials</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted fw-bold">Base Rent</span>
                        <span class="fw-semibold text-dark">@Model.Contract.RentAmount.ToString("C")</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted fw-bold">Billing Cycle</span>
                        <span class="badge bg-white border text-dark">Day @Model.Contract.BillingDay</span>
                    </div>

                    <hr class="text-muted opacity-25 my-4">

                    <h6 class="fw-bold mb-3 text-secondary">Recurring Add-Ons</h6>

                    @if (Model.Contract.AddOns != null && Model.Contract.AddOns.Any())
                    {
                        <ul class="list-group list-group-flush mb-4 rounded-3 border">
                            @foreach (var addon in Model.Contract.AddOns)
                            {
                                <li class="list-group-item bg-white d-flex justify-content-between align-items-center py-3">
                                    <div>
                                        <span class="fw-semibold text-dark d-block">@addon.ChargeDefinition.Name</span>
                                        <span class="badge bg-light text-muted border border-secondary border-opacity-25">@addon.ChargeDefinition.ChargeType</span>
                                    </div>
                                    <span class="fw-semibold text-success">@addon.AgreedAmount.ToString("C")</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-light border mb-4 text-muted small">
                            No active add-on charges applied to this contract.
                        </div>
                    }

                    <div class="p-3 bg-white rounded-3 border mt-auto shadow-sm">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-dark">Estimated Total/Mo</span>
                            <span class="fs-5 fw-bold text-primary">
                                @{
                                    decimal total = Model.Contract.RentAmount;
                                    if (Model.Contract.AddOns != null)
                                    {
                                        total += Model.Contract.AddOns.Where(a => a.ChargeDefinition.ChargeType == "RECURRING").Sum(a => a.AgreedAmount);
                                    }
                                }
                                @total.ToString("C")
                            </span>
                        </div>
                        <div class="text-muted small text-end mt-1">*Excludes one-time fees & meter readings</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle-sm {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }
</style>