@page "{id:guid}"
@using MyRoomService.Domain.Entities
@model MyRoomService.Pages.Contracts.ChangeStatusModel
@{
    ViewData["Title"] = "Change Contract Status";

    // Determine UI setup based on status
    bool isReserved = Model.Contract.Status == ContractStatus.Reserved;
    bool isActive = Model.Contract.Status == ContractStatus.Active;

    string actionText = isReserved ? "Set to Active" : "Terminate Contract";
    string actionClass = isReserved ? "btn-success" : "btn-danger";
    string actionIcon = isReserved ? "bi-play-circle" : "bi-x-octagon";
    string modalMessage = isReserved
        ? "You are about to ACTIVATE this contract. The occupant will be officially moved in and billing will commence."
        : "You are about to TERMINATE this contract. This action will end the current lease immediately.";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Contract Status Configuration</h2>
            <p class="text-muted">Unit @Model.Contract.Unit?.UnitNumber • @Model.Contract.Occupant?.FirstName @Model.Contract.Occupant?.LastName</p>
        </div>
        <a asp-page="/Contracts/Index"
           asp-route-occupantId="@Model.Contract.OccupantId"
           class="btn btn-light rounded-pill border shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to Contracts
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger shadow-sm rounded-3 mb-4 d-flex align-items-center">
            <i class="bi bi-shield-exclamation fs-4 me-3"></i>
            <div>
                <strong>Authorization Failed:</strong>
                <span asp-validation-summary="All" class="mb-0 text-danger"></span>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
            <h5 class="fw-bold text-secondary mb-0"><i class="bi bi-file-earmark-text me-2"></i>Contract Details</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <span class="text-muted d-block small fw-bold text-uppercase">Current Status</span>
                    <span class="badge @(isReserved ? "bg-warning text-dark" : "bg-success") rounded-pill fs-6 mt-1">
                        @Model.Contract.Status.ToString()
                    </span>
                </div>
                <div class="col-md-3">
                    <span class="text-muted d-block small fw-bold text-uppercase">Rent Amount</span>
                    <span class="fs-5 fw-bold text-success">₱@Model.Contract.RentAmount.ToString("N2")</span>
                </div>
                <div class="col-md-3">
                    <span class="text-muted d-block small fw-bold text-uppercase">Start Date</span>
                    <span class="fs-6 fw-semibold">@Model.Contract.StartDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="col-md-3">
                    <span class="text-muted d-block small fw-bold text-uppercase">Billing Day</span>
                    <span class="fs-6 fw-semibold">Day @Model.Contract.BillingDay of the month</span>
                </div>
            </div>

            @if (isReserved || isActive)
            {
                <hr class="text-muted" />
                <div class="d-flex justify-content-end align-items-center mt-4">
                    <span class="text-muted me-3">Requires administrator password to proceed:</span>
                    <button type="button" class="btn @actionClass px-4 py-2 rounded-pill shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#authModal">
                        <i class="bi @actionIcon me-2"></i> @actionText
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center mt-3 mb-0 rounded-3">
                    <i class="bi bi-info-circle me-2"></i> This contract is currently <strong>@Model.Contract.Status.ToString()</strong> and cannot be changed from this screen.
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header @(isReserved ? "bg-success" : "bg-danger") text-white border-bottom-0">
                <h5 class="modal-title fw-bold" id="authModalLabel">
                    <i class="bi bi-shield-lock me-2"></i> Security Verification
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form method="post">
                <div class="modal-body p-4">
                    <p class="text-muted mb-4">@modalMessage</p>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">Enter your password to confirm:</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-key"></i></span>
                            <input asp-for="Password" type="password" class="form-control" required placeholder="Administrator Password" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light border-top-0">
                    <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn @actionClass rounded-pill px-4 fw-bold">Confirm Action</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Optional: If the ModelState is invalid (wrong password), auto-reopen the modal so the user doesn't have to click the button again.
        @if (!ViewData.ModelState.IsValid)
        {
                <text>
                document.addEventListener("DOMContentLoaded", function () {
                    var myModal = new bootstrap.Modal(document.getElementById('authModal'));
                    myModal.show();
                });
                </text>
        }
    </script>
}