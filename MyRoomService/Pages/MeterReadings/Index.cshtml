@page
@model MyRoomService.Pages.MeterReadings.IndexModel
@{
    ViewData["Title"] = "Meter Entry";
}

<div class="container-fluid py-4 px-lg-5">
    <div class="mb-4">
        <h2 class="fw-bold text-dark"><i class="bi bi-speedometer2 me-2"></i>Batch Meter Entry</h2>
    </div>

    @* --- TOP FILTER --- *@
    <form method="get" id="filterForm" class="card border-0 shadow-sm rounded-4 mb-4 bg-light p-3">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <select asp-for="BuildingId" asp-items="Model.Buildings" class="form-select form-select-lg fw-bold border-0 shadow-sm" onchange="this.form.submit()">
                    <option value="">-- Select Building --</option>
                </select>
            </div>
            <div class="col-md-8">
                <div class="input-group input-group-lg shadow-sm">
                    <span class="input-group-text bg-white border-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" asp-for="SearchUnit" id="unitSearch" class="form-control border-0" placeholder="Search Unit Number..." />
                </div>
            </div>
        </div>
    </form>

    @* --- DYNAMIC PILL BUTTONS (Only shows if Building is selected) --- *@
    @if (Model.BuildingId.HasValue && Model.AvailableUtilities.Any())
    {
        <div class="d-flex flex-wrap gap-2 mb-4">
            @foreach (var util in Model.AvailableUtilities)
            {
                bool isActive = Model.UtilityName == util;
                string btnClass = isActive ? "btn-dark shadow-sm" : "btn-white text-dark border shadow-sm";

                // Clicking a pill submits the filter form with the new UtilityName
                <button type="submit" form="filterForm" name="UtilityName" value="@util" class="btn rounded-pill px-4 py-2 fw-bold @btnClass transition-all">
                    <i class="bi bi-speedometer2 me-2 @(isActive ? "text-light" : "text-primary")"></i> @util
                </button>
            }
        </div>
    }

    @* --- BATCH ENTRY GRID --- *@
    @if (Model.Entries.Any())
    {
        <form method="post" asp-page-handler="SaveBatch" id="batchForm">
            <input type="hidden" asp-for="BuildingId" />
            <input type="hidden" asp-for="UtilityName" />

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white border-bottom p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-3">
                        <label class="fw-bold text-muted text-uppercase small mb-0">Reading Date:</label>
                        <input type="date" asp-for="ReadingDate" id="batchReadingDate" class="form-control fw-bold border-secondary shadow-sm" style="width:170px" />
                    </div>
                    <button type="button" id="btnSaveBatchTrigger" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#confirmSaveModal" disabled>
                        <i class="bi bi-check-all me-2"></i>Save All Readings
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase small text-muted">
                            <tr>
                                <th class="ps-4">Unit</th>
                                <th>Meter S/N</th>
                                <th class="text-end">Previous</th>
                                <th class="text-center" style="width:200px">Current Reading</th>
                                <th class="text-center">Reset?</th>
                                <th class="text-end pe-4">Consumption</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Entries.Count; i++)
                            {
                                <tr class="meter-row">
                                    <td class="ps-4 fw-bold">
                                        @Model.Entries[i].UnitNumber
                                        <input type="hidden" asp-for="Entries[i].UnitServiceId" />
                                        <input type="hidden" asp-for="Entries[i].PreviousValue" class="prev-val" />
                                        <input type="hidden" asp-for="Entries[i].PreviousDate" class="prev-date" value="@(Model.Entries[i].PreviousDate?.ToString("yyyy-MM-dd"))" />
                                    </td>
                                    <td class="small text-muted font-monospace">@(string.IsNullOrEmpty(Model.Entries[i].MeterNumber) ? "N/A" : Model.Entries[i].MeterNumber)</td>
                                    <td class="text-end text-muted">
                                        @Model.Entries[i].PreviousValue.ToString("N2")
                                        @if (Model.Entries[i].PreviousDate.HasValue)
                                        {
                                            <div class="small" style="font-size: 0.65rem;">@Model.Entries[i].PreviousDate.Value.ToString("MMM dd")</div>
                                        }
                                    </td>
                                    <td>
                                        <input type="number" step="any" asp-for="Entries[i].CurrentValue" class="form-control text-center curr-val fw-bold" placeholder="0.00" />
                                        <div class="date-warning text-warning small fw-bold mt-1 text-center" style="display:none;">
                                            <i class="bi bi-exclamation-triangle-fill"></i> &lt; 14 Days
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" asp-for="Entries[i].IsReset" class="form-check-input reset-chk fs-5" />
                                    </td>
                                    <td class="text-end pe-4 fw-bold consumption-text text-muted">--</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    }
    else if (Model.BuildingId.HasValue)
    {
        <div class="text-center py-5">
            <i class="bi bi-speedometer2 display-1 text-muted opacity-25"></i>
            <h4 class="text-muted mt-3">No metered services found.</h4>
            <p class="text-muted small">Select a building or verify that units have metered services assigned.</p>
        </div>
    }
</div>

@* --- CONFIRMATION MODAL --- *@
<div class="modal fade" id="confirmSaveModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-body p-4 text-center">
                <div id="modalNormalState">
                    <i class="bi bi-question-circle text-primary display-4 mb-3 d-block"></i>
                    <h4 class="fw-bold">Save Batch Readings?</h4>
                    <p class="text-muted">This will record usage and prepare consumption data for the next billing cycle.</p>
                </div>

                <div id="modalWarningState" style="display:none;">
                    <i class="bi bi-exclamation-triangle-fill text-warning display-4 mb-3 d-block"></i>
                    <h4 class="fw-bold">Short Time Gap Warning</h4>
                    <p class="text-muted">You are recording readings less than 14 days after the previous entry. Are you sure you want to proceed? (Common for move-outs/corrections).</p>
                </div>

                <div class="d-flex gap-2 justify-content-center mt-4">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary rounded-pill px-5 fw-bold shadow-sm" onclick="document.getElementById('batchForm').submit()">Confirm Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let timer;
        const searchInput = document.getElementById('unitSearch');
        if(searchInput) {
            searchInput.addEventListener('input', e => {
                clearTimeout(timer);
                timer = setTimeout(() => document.getElementById('filterForm').submit(), 500);
            });
        }

        const batchReadingDateInput = document.getElementById('batchReadingDate');

        function validateFormState() {
            const saveBtn = document.getElementById('btnSaveBatchTrigger');
            if (!saveBtn) return;

            let hasNegativeError = false;
            let hasDateWarning = false;
            let hasAtLeastOneValue = false;

            document.querySelectorAll('.meter-row').forEach(row => {
                const prev = parseFloat(row.querySelector('.prev-val').value);
                const input = row.querySelector('.curr-val');
                const curr = parseFloat(input.value);
                const isReset = row.querySelector('.reset-chk').checked;

                if (!isNaN(curr)) {
                    hasAtLeastOneValue = true;
                    if (curr < prev && !isReset) {
                        hasNegativeError = true;
                    }
                    if (row.classList.contains('has-date-warning')) {
                        hasDateWarning = true;
                    }
                }
            });

            // Disable button if there are NO values entered, OR if there's a negative math error
            saveBtn.disabled = !hasAtLeastOneValue || hasNegativeError;

            // Change Modal UI based on 14-day warning
            document.getElementById('modalNormalState').style.display = hasDateWarning ? 'none' : 'block';
            document.getElementById('modalWarningState').style.display = hasDateWarning ? 'block' : 'none';
        }

        document.querySelectorAll('.meter-row').forEach(row => {
            const prev = parseFloat(row.querySelector('.prev-val').value);
            const prevDateStr = row.querySelector('.prev-date').value;
            const input = row.querySelector('.curr-val');
            const chk = row.querySelector('.reset-chk');
            const display = row.querySelector('.consumption-text');
            const warningEl = row.querySelector('.date-warning');

            const calc = () => {
                const curr = parseFloat(input.value);
                input.classList.remove('is-invalid', 'border-danger');

                // 1. Math Logic
                if (isNaN(curr)) {
                    display.innerText = '--';
                    display.className = 'text-end pe-4 fw-bold consumption-text text-muted';
                } else if (chk.checked) {
                    display.innerText = '0.00 (Reset)';
                    display.className = 'text-end pe-4 fw-bold text-info consumption-text';
                } else {
                    const cons = curr - prev;
                    display.innerText = cons.toFixed(2);
                    if (cons < 0) {
                        display.className = 'text-end pe-4 fw-bold text-danger consumption-text';
                        input.classList.add('is-invalid', 'border-danger');
                    } else {
                        display.className = 'text-end pe-4 fw-bold text-success consumption-text';
                    }
                }

                // 2. Date Warning Logic (14 Days)
                if (!isNaN(curr) && prevDateStr) {
                    const rDate = new Date(batchReadingDateInput.value);
                    const pDate = new Date(prevDateStr);
                    const diffTime = Math.abs(rDate - pDate);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                    if (diffDays < 14) {
                        warningEl.style.display = 'block';
                        row.classList.add('has-date-warning');
                    } else {
                        warningEl.style.display = 'none';
                        row.classList.remove('has-date-warning');
                    }
                } else {
                    warningEl.style.display = 'none';
                    row.classList.remove('has-date-warning');
                }

                validateFormState();
            };

            input.addEventListener('input', calc);
            chk.addEventListener('change', calc);
        });

        // Re-calculate dates if they change the main reading date
        batchReadingDateInput.addEventListener('change', () => {
            document.querySelectorAll('.curr-val').forEach(input => {
                input.dispatchEvent(new Event('input')); // Trigger calculation manually
            });
        });

        validateFormState();
    </script>
}