@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 rounded-lg">

                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="fw-light my-1">Resend Confirmation</h3>
                    <p class="mb-0 small opacity-75">RentFlow Landlord Portal</p>
                </div>

                <div class="card-body p-4 p-md-5">

                    @if (Model.EmailSent)
                    {
                        <div class="text-center py-3">
                            <div style="font-size:64px;">📬</div>
                            <h4 class="fw-bold mt-3">Email Sent!</h4>
                            <p class="text-muted small mt-2">
                                If that email exists and is unconfirmed, a new confirmation
                                link has been sent. Please check your inbox and spam folder.
                            </p>
                            <a href="https://mail.google.com" target="_blank" class="btn btn-outline-danger mt-2">
                                <i class="bi bi-envelope"></i> Open Gmail
                            </a>
                            <div class="mt-3">
                                <a asp-page="./Login" class="btn btn-primary">Back to Login</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mb-4">
                            <div style="font-size:48px;">📧</div>
                            <p class="text-muted small mt-2">
                                Enter your email and we'll send you a new confirmation link.
                            </p>
                        </div>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email Address</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="d-grid mt-3">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                    Send Confirmation Link
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <a asp-page="./Login" class="text-muted small text-decoration-none">
                                ← Back to Login
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}