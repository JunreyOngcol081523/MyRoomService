@page
@model LoginModel

@{
    ViewData["Title"] = "Welcome Back";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-8">
            <div class="card shadow-lg border-0 rounded-5 overflow-hidden">

                <div class="card-header bg-white text-center py-5 border-0">
                    <div class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 mb-3 fw-bold text-uppercase tracking-wider">
                        Secure Access
                    </div>
                    <h1 class="display-4 fw-extrabold text-dark mb-0">Rent<span class="text-primary">Flow</span></h1>
                    <p class="text-muted small text-uppercase tracking-widest mt-2">Landlord Portal</p>
                </div>

                <div class="card-body p-4 p-md-5 pt-0">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label small text-secondary" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none fw-bold text-primary">Forgot Password?</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm fw-bold py-3 transition-hover">
                                <i class="bi bi-shield-lock me-2"></i>Sign In
                            </button>
                        </div>
                    </form>

                    <div class="position-relative my-5">
                        <hr class="text-muted opacity-25">
                        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small text-muted text-uppercase fw-bold">New Partner?</span>
                    </div>

                    <div class="text-center mb-2">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary btn-sm rounded-pill px-4">
                            Create Landlord Account
                        </a>
                    </div>
                </div>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="card-footer bg-light p-4 text-center border-0">
                        <p class="small text-muted mb-3 fw-bold">Or sign in with</p>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-flex justify-content-center gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-white border shadow-sm btn-sm px-4 rounded-pill" name="provider" value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            </div>

            <div class="text-center mt-4 mb-5">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted small text-decoration-none">
                    <i class="bi bi-envelope-at me-1"></i> Didn't receive confirmation? <strong>Resend</strong>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .fw-extrabold {
        font-weight: 800;
    }

    .transition-hover {
        transition: transform 0.2s;
    }

        .transition-hover:hover {
            transform: translateY(-2px);
        }

    .card {
        border: none !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}