@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Check Your Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 text-center">
            <div class="card shadow-lg border-0 rounded-lg p-5">

                <div style="font-size:64px;">📧</div>

                <h3 class="fw-bold mt-3">Check Your Email</h3>
                <p class="text-muted mt-2">We sent a confirmation link to:</p>
                <p class="fw-bold text-primary fs-5">@Model.Email</p>

                <hr />

                <p class="text-muted small">
                    Click the link in your email to activate your account before logging in.
                    <br />Check your <strong>Spam</strong> or <strong>Junk</strong> folder if you don't see it.
                </p>

                <a href="https://mail.google.com" target="_blank" class="btn btn-outline-danger mt-3">
                    <i class="bi bi-envelope"></i> Open Gmail
                </a>

                <div class="mt-3">
                    <a asp-page="./Login" class="btn btn-link text-decoration-none">
                        Back to Login
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>