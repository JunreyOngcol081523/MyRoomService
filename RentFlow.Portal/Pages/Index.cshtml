@page
@model IndexModel
@{
    ViewData["Title"] = "Tenant Portal";
}

<div class="container py-5">
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm border-0" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold text-primary">Welcome to RentFlow</h1>
            <p class="col-md-8 fs-4 text-muted">Manage your stay, view your lease, and settle payments all in one place. Your home, simplified.</p>
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 shadow-sm">Login to Your Portal</a>
            }
        </div>
    </div>

    <div class="row g-4 py-2">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white mb-3 d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 60px; height: 60px;">
                        <i class="bi bi-file-earmark-text fs-3"></i>
                    </div>
                    <h3 class="h5">My Lease</h3>
                    <p class="text-muted small">View your contract details, move-in dates, and terms.</p>
                    <a href="/Contracts" class="btn btn-outline-primary btn-sm rounded-pill px-4">View Details</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white mb-3 d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 60px; height: 60px;">
                        <i class="bi bi-credit-card fs-3"></i>
                    </div>
                    <h3 class="h5">Payments</h3>
                    <p class="text-muted small">Check your current balance and view previous invoices.</p>
                    <a href="/Invoices" class="btn btn-outline-success btn-sm rounded-pill px-4">Pay Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white mb-3 d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 60px; height: 60px;">
                        <i class="bi bi-megaphone fs-3"></i>
                    </div>
                    <h3 class="h5">Building Updates</h3>
                    <p class="text-muted small">Stay informed about maintenance and building news.</p>
                    <a href="#" class="btn btn-outline-info btn-sm rounded-pill px-4">Read News</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

        .transition {
            transition: all 0.3s ease-in-out;
        }
    </style>
}